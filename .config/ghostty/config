theme = tokyonight_moon
macos-titlebar-style = tabs
font-size = 18
cursor-style = block
mouse-hide-while-typing = true
window-padding-balance = true
window-save-state = always
font-thicken = false
adjust-cell-width = -1
macos-secure-input-indication = false
#  macos-icon = blueprint
confirm-close-surface = false
unfocused-split-opacity = 0.8

# Keybindings

keybind = ctrl+a>c=new_tab
keybind = ctrl+a>s>s=new_split:auto
keybind = ctrl+a>s>l=new_split:right
keybind = ctrl+a>s>h=new_split:left
keybind = ctrl+a>s>k=new_split:up
keybind = ctrl+a>s>j=new_split:down
keybind = ctrl+a>a=toggle_split_zoom
keybind = ctrl+a>-=new_split:down
keybind = ctrl+a>\=new_split:right
keybind = ctrl+a>q=close_surface
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>l=goto_split:right
keybind = ctrl+a>shift+h=resize_split:left,150
keybind = ctrl+a>shift+l=resize_split:right,150
keybind = ctrl+a>shift+j=resize_split:up,150
keybind = ctrl+a>shift+k=resize_split:down,150
keybind = ctrl+a>p=previous_tab
keybind = ctrl+a>n=next_tab
